<?xml version="1.0" encoding="UTF-8"?>


<?import com.gluonhq.charm.glisten.control.Avatar?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<fx:root alignment="CENTER" spacing="10.0" styleClass="userSelect" type="VBox" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane>
         <children>
            <Circle fill="WHITE" radius="24.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0">
               <effect>
                  <DropShadow />
               </effect>
            </Circle>
            <Avatar fx:id="UserImage" radius="26.0">
               <image>
                  <Image url="@../Image/default-user-avatar.png" />
               </image>
            </Avatar>
         </children>
      </StackPane>
      <Label fx:id="UserName" text="Kürşat Dostoğlu" textFill="WHITE" />
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
   <padding>
      <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
   </padding>
</fx:root>
